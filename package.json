{
  "name": "@zthun/clocks",
  "version": "0.0.0",
  "description": "Clocks, timers, stopwatches, and calendars.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/clocks"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "timer",
    "stopwatch",
    "timezone",
    "utc",
    "clock"
  ],
  "scripts": {
    "clean": "rimraf --glob 'dist' 'reports' 'coverage' '*.tgz' '*.log' 'packages/**/dist' 'packages/**/docs' 'packages/**/*.tgz' 'packages/**/*.log' 'packages/**/.certificates'",
    "test": "vitest --run --coverage",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.3",
    "@types/react": "^18.2.42",
    "@types/react-window": "^1.8.8",
    "@vitest/coverage-istanbul": "^1.0.1",
    "@zthun/lint-janitor": "^15.1.1",
    "@zthun/lint-janitor-config": "^15.1.1",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lerna": "^8.0.0",
    "rimraf": "^5.0.5",
    "typescript": "~5.3.3",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.0.1"
  },
  "packageManager": "yarn@4.0.2"
}
